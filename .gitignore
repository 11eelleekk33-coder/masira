}
.submenu li{
  position:relative;
}
.submenu li a{
  display:block;
  padding:10px;
  color:#000;
  text-decoration:none;
  border-bottom:1px solid #eee;
}
.submenu li a:hover{
  background:#f0f0f0;
}
.menu li:hover > .submenu{
  display:block;
}
.submenu .submenu{
  right:100%;
  top:0;
}
main{
  padding:20px;
  background:#fff;
}
footer{
  background:#1d2731;
  color:#fff;
  text-align:center;
  padding:10px;
